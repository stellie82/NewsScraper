<div class="container-fluid" id="parallax-container">
  <h1 class="display-4">News Article Scraper</h1>
  <p class="lead">Scientific American</p>
</div>

{{!-- Container for scraped articles --}}
<div class="container-fluid" id="articles-container">
  {{#if articles}}
  {{#each articles}}
  {{#unless this.saved}}
  <div class="card border-primary">
    <div class="card-header">
      <h5>
        <a class="article-title" href={{this.link}} target="_blank">{{this.title}}</a>
      </h5>
      <button class="btn btn-sm btn-outline-secondary save-article" article-id={{this.id}}>Save Article</button>
    </div>
    <div class="card-body">
      <img src={{this.image}} class="article-img" alt="article-photo" style="width: 200px">
      <p>{{this.summary}}</p>
    </div>
  </div>
  {{/unless}}
  {{/each}}
  {{else}}
  <div class="card border-primary" id="no-articles">
    <div class="card-header">
      <h5>There are no articles to show. What would you like to do?</h5>
    </div>
    <div class="card-body">
      <a id="link-scrape" href="/scrape">Scrape new articles</a>
      <a id="link-saved" href="/saved-articles">Go to Saved Articles</a>
    </div>
  </div>
  {{/if}}
  <div class=</div> <script type="text/javascript"
    src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.2.1/jquery.min.js">
    </script>
    <script src="/js/app.js"></script>