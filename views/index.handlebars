<nav class="navbar navbar-expand-lg navbar-light bg-light">
  <div class="collapse navbar-collapse" id="navbarNavAltMarkup">
    <div class="navbar-nav">
      <a class="nav-item nav-link active" id="home" href="/">Home</a>
      <a class="nav-item nav-link" href="/saved-articles">Saved Articles</a>
      <button class="btn btn-sm btn-outline-secondary" id="scrape" href="/scrape" type="button">Scrape New Articles</button>
      <button class="btn btn-sm btn-outline-secondary" id="clear" href="/articles/clear" type="button">Clear
        Articles</button>
    </div>
  </div>
</nav>

<div class="jumbotron jumbotron-fluid">
  <div class="container">
    <h1 class="display-4">News Article Scraper</h1>
    <p class="lead">Scientific American</p>
  </div>
</div>

<div class="container-fluid" id="articles-container">
  {{#each articles}}
  {{#unless this.saved}}{{/unless}}
  <div class="card">
    <div class="card-header">
      <h5>
        <a class="article-title" href={{this.link}} target="_blank">{{this.title}}</a>
      </h5>
      <button class="btn btn-sm btn-outline-secondary save-article" article-id={{this.id}}>Save Article</button>
    </div>

    <div class="card-body">
      <img src={{this.image}} class="article-img" alt="article-photo" style="width: 200px">
      <p>{{this.summary}}</p>
    </div>
  </div>
  {{/each}}
</div>

<script type="text/javascript" src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.2.1/jquery.min.js"></script>
<script src="app.js"></script>