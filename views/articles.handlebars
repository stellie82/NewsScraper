<nav class="navbar navbar-expand-lg navbar-light bg-light">
  <div class="collapse navbar-collapse" id="navbarNavAltMarkup">
    <div class="navbar-nav">
      <a class="nav-item nav-link active" id="home" href="/">Home</a>
      <a class="nav-item nav-link" href="/saved-articles">Saved Articles</a>
      <button class="btn btn-sm btn-outline-secondary" id="clear" href="articles/clear" type="button">Clear
        Articles</button>
    </div>
  </div>
</nav>

<div class="jumbotron jumbotron-fluid">
  <div class="container">
    <h1 class="display-4">News Article Scraper</h1>
    <p class="lead">Scientific American</p>
  </div>
</div>

<div class="container-fluid" id="saved-articles">
  {{#each articles}}
  {{#if this.saved}}{{/if}}
  <div class="card">
    <div class="card-header">
      <h5>
        <a class="article-title" href={{this.link}} target="_blank">{{this.title}}</a>
      </h5>
      <button class="btn btn-sm btn-outline-warning delete-saved" article-id={{this.id}}>Delete from Saved</button>
      <button class="btn btn-sm btn-outline-info article-notes" article-id={{this.id}}>Article Notes</button>
    </div>

    <div class="card-body">
      <img src={{this.image}} class="article-img" alt="article-photo" style="width: 200px">
      <p>{{this.summary}}</p>
    </div>
  </div>
  {{/each}}
</div>

<div class="modal" id="modalBox" data-backdrop="static" tabindex="-1" role="dialog">
  <div class="modal-dialog" role="document">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title"></h5>
        <button type="button" class="close" data-dismiss="modal">
          <span aria-hidden="true">&times;</span>
        </button>
      </div>
      <div class="modal-body"></div>
      <div class="modal-footer">
        <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
        <button type="button" class="btn btn-primary">Understood</button>
      </div>
    </div>
  </div>
</div>

<script type="text/javascript" src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.2.1/jquery.min.js"></script>
<script src="app.js"></script>