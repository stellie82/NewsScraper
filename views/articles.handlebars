<nav class="navbar navbar-expand-lg navbar-light bg-light">
  <div class="collapse navbar-collapse" id="navbarNavAltMarkup">
    <div class="navbar-nav">
      <a class="nav-item nav-link active" id="home" href="/">Home</a>
      <a class="nav-item nav-link" href="/saved-articles">Saved Articles</a>
      <button class="btn btn-sm btn-outline-secondary" id="clear" href="articles/clear" type="button">Clear
        Articles</button>
    </div>
  </div>
</nav>

<div class="jumbotron jumbotron-fluid">
  <div class="container">
    <h1 class="display-4">News Article Scraper</h1>
    <p class="lead">Scientific American</p>
  </div>
</div>

<div class="container-fluid" id="saved-articles">
  {{#each articles}}
  {{#if this.saved}}
  <div class="card">
    <div class="card-header">
      <h5>
        <a class="article-title" href={{this.link}} target="_blank">{{this.title}}</a>
      </h5>
      <button class="btn btn-sm btn-outline-warning delete-saved" article-id={{this.id}}>Delete from Saved</button>
      <button class="btn btn-sm btn-outline-info article-notes" article-id={{this.id}} data-toggle="modal"
        data-target="#modalBox">Article Notes</button>
    </div>

    <div class="card-body">
      <img src={{this.image}} class="article-img" alt="article-photo" style="width: 200px">
      <p>{{this.summary}}</p>
    </div>
  </div>
  {{/if}}
  {{/each}}
</div>

<div class="modal fade" id="modalBox" data-backdrop="static" tabindex="-1" role="dialog" aria-labelledby="modalBoxLabel"
  aria-hidden="true">
  <div class="modal-dialog modal-lg" role="document">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title" id="modalBoxLabel">Notes for Article: {{this.title}}</h5>
        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
          <span aria-hidden="true">&times;</span>
        </button>
      </div>
      <div class="modal-body"></div>
      <div class="modal-notes"></div>
      <div class="modal-footer">
        <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
        <button type="button" class="btn btn-info" id="save-note" article-id={{this.id}}>Save Note</button>
      </div>
    </div>
  </div>
</div>

